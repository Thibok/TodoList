{% import "macros/_form_elements.html.twig" as formElements %}

{{ form_start(form, {'attr': {'class': 'mx-auto', 'id': 'taskForm', 'novalidate': 'novalidate'}}) }}
    <div class="form-group">
        {{ form_label(form.title, "Titre", {'label_attr' : {'class': 'control-label'}}) }}    
        {{ form_widget(form.title) }}
        <span class="invalid-feedback d-block" id="titleError"></span>
    </div>
    <div class="form-group">
        {{ form_label(form.content, "Contenu", {'label_attr' : {'class': 'control-label'}}) }}    
        {{ form_widget(form.content) }}
        <span class="invalid-feedback d-block" id="contentError"></span>
    </div>
    <div id="submitBtnContainer" class="d-flex flex-column align-items-center">
        {% if taskPage == 'create' %}
            <button class="btn btn-success mt-2 mb-3" id="createTaskBtn">Ajouter</button>
        {% elseif taskPage == 'edit' %}
            <button class="btn btn-success mt-2 mb-3" id="editTaskBtn">Modifier</button>
        {% endif %}
        {{ formElements.recaptcha('g-recaptcha') }}
    </div>
    {{ form_rest(form) }}
{{ form_end(form) }}